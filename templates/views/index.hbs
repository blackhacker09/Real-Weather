<!DOCTYPE html>
<html lang="en">

<head>
    
      {{>headerlinks}}

</head>

<body>
    <!-- <h1>Welcome to static page</h1>
    <button class="btn btn-danger">hello</button> -->

    <!-- // nav bar section  -->

    {{>navbar}}

    <!-- // main header  -->


    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left side div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>
                        <h3>Welcome to Realweather app</h3>
                        </p>
                        <h1>Get The Latest <span class="text_clr">Weather </span>Info of Your City</h1>
                        <a href="/weather"><button>Check now</button></a>
                    </div>

                    <!-- right side div -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel"
                            data-interval="2000">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="images/bg1.gif" class="w-100" alt="first slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/bg2.gif" class="w-100" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/bg3.gif" class="w-100" alt="Third slide">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- footer section -->


    {{>footer}}

</body>

</html>